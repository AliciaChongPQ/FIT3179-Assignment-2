{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {"text":"Disease Rates by Age Groups",
                    "fontSize": 18,
                    "anchor": "middle",  
                    "align": "center",
                    "orient": "top"  
                  },
    "background":"#f9f9f9",
    
    "padding": {"left": 1, "right": 15}, 
    "data": {
      "url": "https://raw.githubusercontent.com/AliciaChongPQ/FIT3179-Assignment-2/refs/heads/main/Disease_ages.csv"
    },
    "facet": {
      "row": {
        "field": "Disease",
        "type": "nominal",
        "header":{
          "title":null,
          "labelFontSize":12
        }
        }
      }
    ,
    "spec": {
        
      "mark": {"type":"circle", "opacity": 0.6, "stroke":"black"},
      "transform": [
        {
          "filter": "datum.Disease === 'Typhoid' || datum.Disease === 'Hepatitis A'"
        }
      ],
      "encoding": {
        "x": {
          "field": "age_group",
          "type": "nominal",
          "sort": null,
          "axis": {
            "ticks": false,
            "domain": false,
            "title": "Age Group",
            "labelAngle": 0  
          }
        },
        "size": {
          "field": "normalised_incidence",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [5,10,15,20],
            "range": [750, 2000,5000,7500,10000]
          },
          "legend": {
            "title": "Cases per 1M Population",
            "columns" : 2
          }
        },
        "color": {
          "field": "Disease",
          "type": "nominal",
          "scale": {
        "domain": ["Typhoid", "Hepatitis A"],
        "range": ["#755a85", "#6e889c"]  
          },
          "legend":null
        },
        "tooltip": [
          {
            "field": "age_group",
            "type": "nominal",
            "title": "Age Group"
          },
          {
            "field": "normalised_incidence",
            "type": "quantitative",
            "title": "Cases Per 1M population",
            "format": ".2f"
          }
        ]
      },
      "width": 850,  
      "height": 150
    }
  }
  