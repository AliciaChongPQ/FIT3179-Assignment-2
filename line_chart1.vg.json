{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text":"Incidence of water-borne diseases over the years",
      "fontSize": 18,
      "anchor": "middle",  
       "align": "center",
       "orient": "top"  
  },
    "height": 400,
    "width": 510,
    "data": {
      "url": "https://raw.githubusercontent.com/AliciaChongPQ/FIT3179-Assignment-2/refs/heads/main/diseases_by_year.csv"
    },
    "mark": "line",
    "encoding": {
      "x": {
        "field": "Year",
        "type": "ordinal",
        "title":"Year"
      },
      "y": {
        "field": "Total Incidence",
        "type": "quantitative",
        "title": "#Cases"
      },
      "color": {"field": "Disease", "type": "nominal", "title": "Disease", "legend": {"orient":"bottom-left", "labelFontSize": 14, "symbolSize": 200,"columns": 4}}
  }
  }